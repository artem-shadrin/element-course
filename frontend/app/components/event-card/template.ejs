<%
const cfg = {...require("./data.json"), ...arguments?.[0]}
const {
  extraClasses,
  extraAttrs,
  img,
  date,
  title,
  href,
  timer,
} = cfg
%>
<%
const additionalClass = (img && img.position === "full") ? 'event-card--full-img' : '';
const classes = `event-card ${extraClasses.join(" ")} ${additionalClass}`.trim()
const attrs = extraAttrs.join(" ")
%>

<li
  class="<%= classes %>"
  <%- attrs %>
>
  <% if (timer){ %>
    <div class="event-card__timer">
      <div class="event-card__timer-text"><%- timer.text %></div>
      <div class="event-card__timer-start"><%- timer.start %></div>
    </div>
  <% } %>
  <% if(img) { %>
    <div class="event-card__img"><img src="<%- img.src %>" <% if(img.alt){ %>alt="<%- img.alt %> <% } %>"></div>
  <% } %>
  <span class="event-card__date"><%- date %></span>
  <a href="<%- href %>" class="event-card__title"><%- title %></a>
</li>
