<%
const cfg = {...require("./data.json"), ...arguments?.[0]}
const {
  extraClasses,
  extraAttrs,
  lang
} = cfg
%>
<%
const classes = `lang-switcher ${extraClasses.join(" ")}`.trim()
const attrs = extraAttrs.join(" ")
%>

<select
  class="<%= classes %>"
  <%- attrs %>
>
  <option class="lang-switcher__item">
    <a href="#" class="lang-switcher__link ru">RU</a>
  </option>
  <option class="lang-switcher__item">
    <a href="#" class="lang-switcher__link en">ENG</a>
  </option>
</select>
