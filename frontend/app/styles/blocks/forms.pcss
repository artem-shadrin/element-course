@import "../media.pcss";

.form {
    padding: 50px 0;
    width: 100%;
}

.form-input {
    width: 100%;
    border: 1px solid var(--c-gray);

    &.is-valid {
        border-color: var(--c-error);
    }
}

.form-feedback {
    &__fieldset {
        display: grid;
        row-gap: 20px;
        column-gap: 40px;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        grid-auto-flow: column;
    }

    &__message {
        grid-row: 1/4;
    }
}